extends layout

block content
  title Register on CodeLads
  #container-signin
    h1#title Register
    form(name='form' method='POST', action='/users/register')
      #form-group  
        label Name: 
        input.form-control(name='name' type='text')
      #form-group
        label Username: 
        input.form-control(name='username' type='text')
      #form-group
        label Password: 
        input.form-control(name='password' type='password')
      #form-group
        label Confirm Password: 
        input.form-control(name='password2' type='password')
      br
      input.btn.btn-primary(type='submit' value='Log In')
